<ul>
  <li ng-repeat="phone in phones | filter:query | orderBy:orderProp" class="thumbnail">
    <a href="#" class="thumb"><img src="{{phone.image_url}}" width="100"/></a>
    <a href="#" class="thumb">{{phone.name}}</a>
    <p>{{phone.snippet}}</p>
  </li>
</ul>
